{
  "name": "gen-export",
  "version": "1.0.0",
  "description": "Generate the index.js of ESM for a directory",
  "author": "Riceball LEE @snowyu",
  "bin": {
    "gen-export-js": "./bin/run"
  },
  "homepage": "https://github.com/snowyu/gen-export.js",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "https://github.com/snowyu/gen-export.js",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-autocomplete": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.4.7"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.17",
    "@types/chai": "^4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.13",
    "chai": "^4",
    "eslint": "^8.40.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "mocha": "^10",
    "oclif": "^3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "oclif": {
    "bin": "gen-export-js",
    "default": ".",
    "dirname": "gen-export-js",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {}
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc.yml",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "release": "yarn prepack && npx standard-version",
    "release.alpha": "yarn release -- --prerelease alpha",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/snowyu/gen-export.js/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
